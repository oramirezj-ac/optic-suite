{
    "name": "oramirezj-ac/optic-suite",
    "description": "A web-based management suite for optometry clinics",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Oscar Ramirez",
            "email": "oramirezj.ac@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "ext-intl": "*",
        "vlucas/phpdotenv": "^5.4",
        "monolog/monolog": "^3.0",
        "respect/validation": "^2.2",
        "twig/twig": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.9",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.13"
    },
    "autoload": {
        "psr-4": {
            "OpticSuite\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpticSuite\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src --level=7",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "quality": [
            "@cs-check",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}